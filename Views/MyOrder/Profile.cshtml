@model OnlineJwellery_Shopping.Models.User

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}
<div class="contain1">

    <div class="title">
        <div class="title-top">
            <p>Home / Account</p>
        </div>
        <div class="title-bottom">
            <h3 style="color: #FFA45C;">Account </h3>
        </div>
    </div>
    <div class="sidebar">

        <img src="@Model.Thumbnail"
             alt="Avatar" class="profile-img">
        <div class="username">@Context.Session.GetString("Username")</div>

        <form asp-controller="Page" asp-action="Logout" method="post">
            <button type="submit" class="logout-button" style="background-color: #FFA45C;">Log out</button>
        </form>
        <ul>
            <li>
                <div class="menu">
                    <i class="fas fa-shopping-cart"></i>
                    <a href="/MyOrder/MyOrder">My order</a>
                </div>
            </li>

            <li>
                <div class="menu">
                    <i class="fas fa-key"></i>
                    <a href="/MyOrder/ChangePassword">Change password</a>
                </div>
            </li>

            <li>
                <div class="menu">
                    <i class="fas fa-user-circle" style="color: #FFA45C;"></i>
                    <a href="/MyOrder/Profile" style="color: #FFA45C;" class="li1">Profile</a>
                </div>
            </li>

        </ul>
    </div>

    <div class="content">
        <div style="border-bottom: 1px solid #DDE1EF;" class="content-top">
            <p style="color: black">Profile</p>
        </div>
        <div style="margin-left:20px; margin-top:10px;" class="my-profile-item">
            <h3 style="font-weight: 900;" class="my-profile-item-title">Full name</h3>
            <div class="my-profile-item-info">@Model.Username</div>
        </div>
        <div style="margin-top: 10px;" class="my-profile-item">
            <h3 style="font-weight: 900;" class="my-profile-item-title">Email</h3>
            <div class="my-profile-item-info">@Model.Email</div>
        </div>
        <div style="margin-top: 10px;" class="my-profile-item">
            <h3 style="font-weight: 900;" class="my-profile-item-title">Telephone</h3>
            <div class="my-profile-item-info">@Model.PhoneNumber</div>
        </div>
        <div style="margin-left: 20px; margin-top: 10px;" class="my-profile-item">
            <h3 style="font-weight: 900;" class="my-profile-item-title">Address</h3>
            <div class="my-profile-item-info">@Model.Address</div>
        </div>



        <a style="margin-top: 100px; margin-left: -310px;" class="btn btn-primary" asp-controller="MyOrder" asp-action="EditProfile" asp-route-id="@Model.UserId">
            Edit Profile
        </a>


    </div>
