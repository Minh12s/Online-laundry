@model List<Product>
@{
    ViewData["Title"] = "Search Product";
    Layout = "~/Views/Shared/User_Layout.cshtml";

}
<div class="search-results-container">
    <h3 class="search-results">@Model.Count Search Results</h3>
</div>

@if (Model != null && Model.Any())
{
    <div class="col-md-8 col-lg-10 order-md-last">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-sm-6 col-md-3 ftco-animate">
                    <div class="product">
                        <a href="#" class="img-prod">
                            <img class="img-fluid" src="@product.Thumbnail" alt="Colorlib Template">
                            <span class="status">30%</span>
                            <div class="overlay"></div>
                        </a>
                        <div class="text py-3 px-3">
                            <h3><a href="@Url.Action("Details", "Page", new { slug = product.Slug })">@product.ProductName</a></h3>

                            <div class="d-flex">
                                <div class="pricing">
                                    <p class="price"><span class="mr-2 price-dc">$120.00</span><span class="price-sale">$@product.Price</span></p>
                                </div>
                                <div class="rating">
                                    @for (int i = 0; i < (int)ViewBag.ProductAverageRating[product.ProductId]; i++)
                                    {
                                        <a href="#"><span class="ion-ios-star star-yellow"></span></a>
                                    }
                                    @if (ViewBag.ProductAverageRating[product.ProductId] - (int)ViewBag.ProductAverageRating[product.ProductId] >= 0.5)
                                    {
                                        <a href="#"><span class="ion-ios-star star-yellow ion-ios-star-half"></span></a>
                                    }
                                    @for (int i = 0; i < 5 - (int)ViewBag.ProductAverageRating[product.ProductId] - ((ViewBag.ProductAverageRating[product.ProductId] - (int)ViewBag.ProductAverageRating[product.ProductId] >= 0.5 ? 1 : 0)); i++)
                                    {
                                        <a href="#"><span class="ion-ios-star-outline star-yellow"></span></a>
                                    }
                                </div>
                            </div>
                            <p class="bottom-area d-flex px-3">
                                <a href="#" class="add-to-cart text-center py-2 mr-1"><span>Add to cart <i class="ion-ios-add ml-1"></i></span></a>
                                <a href="#" class="buy-now text-center py-2">Buy now<span><i class="ion-ios-cart ml-1"></i></span></a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <p>No results found.</p>
}
<style>
    .search-results-container {
        text-align: center; /* Căn giữa nội dung */
        margin-bottom: 20px; /* Khoảng cách dưới tiêu đề */
    }

    .search-results {
        display: inline-block; /* Để margin có hiệu lực */
    }

    .order-md-last {
        margin-left: 130px;
    }

</style>
<style>
    .star-yellow {
        color: gold; /* Đổi màu của sao sang màu vàng */
    }
</style>