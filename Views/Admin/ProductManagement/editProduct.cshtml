@model OnlineJwellery_Shopping.Models.Product
@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .row {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 15px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .form-control {
        min-width: 350px; /* Điều chỉnh độ rộng tối thiểu của ô input */
        width: 100%; /* Đảm bảo ô input mở rộng hết phần tử cha */
        padding: 0.375rem 0.75rem;
        font-size: 15px;
        line-height: 1.5;
        color: black;
        background-color: #f1f1f1;
        background-clip: padding-box;
        height: 45px;
        border: 1px solid #dadada;
        border-radius: .357rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .control-label {
        font-weight: 600;
        color: black;
        margin-bottom: 5px;
    }

    .main-section {
        margin-left: 15px;
    }

    .btn-save {
        margin-top: 20px;
        background-color: rgb(166 236 171);
        color: rgb(1 123 10);
        font-weight: 600;
        letter-spacing: 1px;
        border: none;
        border-radius: .357rem;
        padding: 5px 20px;
    }

    .btn-cancel {
        margin-top: 20px;
        background-color: rgb(255 197 197);
        color: rgb(190, 40, 40);
        font-weight: 600;
        letter-spacing: 1px;
        border: none;
        border-radius: .357rem;
        padding: 8px 20px;
    }
</style>
<section class="is-title-bar">
    <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
        <ul>
            <li style="margin-left:-30px;">List of products</li>
            <li>Edit Product</li>
        </ul>

    </div>
</section>
<section class="section main-section">
    <div class="row">
        <div class="col-md-12">
            <div class="tile">

                <div class="tile-body">
                    <form class="edit-product-form" asp-controller="Admin" asp-action="editProduct" method="post" enctype="multipart/form-data">

                        <div class="row">
                            <div class="form-group col-md-4">
                                <label asp-for="ProductName" class="control-label">Product Name</label>
                                <input asp-for="ProductName" class="form-control" name="ProductName" />
                                <div style="margin-left:-167px;">
                                    @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group col-md-4">
                                <label asp-for="Price" class="control-label">Price</label>
                                <input asp-for="Price" class="form-control" name="Price" type="number" />
                                <div style="margin-left:-167px;">
                                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group col-md-4">
                                <label asp-for="Qty" class="control-label">Quanty</label>
                                <input asp-for="Qty" class="form-control" name="qty" type="number" />
                                <div style="margin-left:-167px;">
                                    @Html.ValidationMessageFor(model => model.Qty, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-4">
                                <label asp-for="StoneType" class="control-label">Stone Type</label>
                                <input asp-for="StoneType" class="form-control" name="StoneType" />
                                <div style="margin-left:-167px;">
                                    @Html.ValidationMessageFor(model => model.StoneType, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group col-md-4">
                                <label asp-for="TotalWeight" class="control-label">Total Weight</label>
                                <input asp-for="TotalWeight" class="form-control" name="TotalWeight" />
                                <div style="margin-left:-167px;">
                                    @Html.ValidationMessageFor(model => model.TotalWeight, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group col-md-4">
                                <label asp-for="Color" class="control-label">Color</label>
                                <input asp-for="Color" class="form-control" name="color" type="text" />
                                <div style="margin-left:-167px;">
                                    @Html.ValidationMessageFor(model => model.Color, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-4">
                                <label asp-for="Size" class="control-label">Size</label>
                                <input asp-for="Size" class="form-control" name="size" type="text" />
                                <div style="margin-left:-167px;">
                                    @Html.ValidationMessageFor(model => model.Size, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group col-md-4">
                                <label asp-for="Material" class="control-label">Material</label>
                                <input asp-for="Material" class="form-control" name="material" />
                                <div style="margin-left:-167px;">
                                    @Html.ValidationMessageFor(model => model.Material, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group col-md-4">
                                <label asp-for="CertificationCode" class="control-label">Certification code</label>
                                <input asp-for="CertificationCode" class="form-control" name="CertificationCode" />
                                <div style="margin-left:-167px;">
                                    @Html.ValidationMessageFor(model => model.CertificationCode, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-4">
                                <label for="CategoryId" class="control-label">Category</label>
                                <select class="form-control" name="CategoryId" asp-for="CategoryId" asp-items="@ViewBag.Categories">
                                    <option value="">-- Select category --</option>
                                    <!-- Thêm các tùy chọn danh mục tại đây -->
                                </select>
                                <div style="margin-left:-167px;">
                                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="BrandId" class="control-label">Brand</label>
                                <select class="form-control" name="BrandId" asp-for="BrandId" asp-items="@ViewBag.Brands">
                                    <option value="">-- Select Brand --</option>
                                    <!-- Thêm các tùy chọn danh mục tại đây -->
                                </select>
                                <div style="margin-left:-167px;">
                                    @Html.ValidationMessageFor(model => model.BrandId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="GoldAgeId" class="control-label">GoldAge</label>
                                <select class="form-control" name="GoldAgeId" asp-for="GoldAgeId" asp-items="@ViewBag.Goldages">
                                    <option value="">-- Select category --</option>
                                    <!-- Thêm các tùy chọn danh mục tại đây -->
                                </select>
                                <div style="margin-left:-167px;">
                                    @Html.ValidationMessageFor(model => model.GoldAgeId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-4">
                                <label class="control-label">Thumbnail</label>
                                <div>
                                    <input asp-for="Thumbnail" type="file" name="Thumbnail" class="form-control" onchange="displayThumbnail(this);" />
                                    @if (!string.IsNullOrEmpty(Model.Thumbnail))
                                    {
                                        <img id="thumbnailImage" src="@Model.Thumbnail" alt="Thumbnail image" style="max-width: 50%;" />
                                    }
                                </div>
                                <div style="margin-left:-167px;">
                                    @Html.ValidationMessageFor(model => model.Thumbnail, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group col-md-4">
                                <label asp-for="ProductId" class="control-label">Product Id</label>
                                <input asp-for="ProductId" class="form-control" name="ProductId" />
                                <div style="margin-left:-167px;">
                                    @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <button class="btn btn-save" type="submit">Save</button>
                        <a class="btn btn-cancel" href="/Admin/Product">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script>function displayThumbnail(input) {
        var thumbnailImage = document.getElementById('thumbnailImage');
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                thumbnailImage.src = e.target.result;
                thumbnailImage.style.display = 'block';
            };
            reader.readAsDataURL(input.files[0]);
        }
    }</script>





