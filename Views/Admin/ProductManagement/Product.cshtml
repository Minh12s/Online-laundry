                            <td>@product.ProductId</td>
                            <td><img src="@product.Thumbnail" alt="Thumbnail" width="100" height="100"></td>
                            <td>@product.ProductName</td>
                            <td>@product.Price</td>
                            <td>@product.Qty</td>


