@{
    ViewData["Title"] = "Customer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="is-title-bar">
    <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
        <ul>
           List of orders
        </ul>

    </div>
</section>
<section class="is-hero-bar">
    <h1 style="text-align:center; margin: 20px 0">Purchased order</h1>

</section>
<section class="section main-section">

    <div class="card has-table">

        <div class="card-content">
            <table class="table table-hover table-bordered" id="sampleTable">
                <thead>
                    <tr>
                        <th width="10"><input type="checkbox" id="all"></th>
                        <th>Order Id</th>
                        <th>Customer Name</th>
                        <th>Total amount</th>
                        <th>Status</th>
                        <th>IsPaid</th>
                        <th>Order date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td width="10"><input type="checkbox" name="check1" value="1"></td>
                        <td>1</td>
                        <td>John Doe</td>
                        <td>$100.00</td>
                        <td><span class="badge bg-success">Delivered</span></td>
                        <td><span>Yes</span></td>
                        <td>2024-03-20</td>
                        <td>
                            <a class="btn btn-primary" style="background-color:green; color:white;" asp-action="OrderDetailsUser">OrderDetails</a>
                        </td>
                    </tr>
                    <tr>
                        <td width="10"><input type="checkbox" name="check2" value="2"></td>
                        <td>2</td>
                        <td>Jane Smith</td>
                        <td>$75.50</td>
                        <td><span class="badge bg-warning">Processing</span></td>
                        <td><span>No</span></td>
                        <td>2024-03-21</td>
                        <td>
                            <a class="btn btn-primary" style="background-color:green; color:white;" asp-action="OrderDetailsUser">OrderDetails</a>
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
  

</section>
  <div class="edit-back-links">

        <a class="btn btn-secondary" asp-action="customer" style="background-color:black; color:white;">Back to List</a>
    </div>
